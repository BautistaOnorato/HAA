---
interface Props {
  image: string
  align?: 'flex-start' | 'flex-end' | 'center'
  imagePosition?: 'top' | 'bottom' | 'center'
}

const { image, align, imagePosition } = Astro.props
---
<section style={`align-items: ${align || 'flex-start'}`}>
  <img src={image} alt="" style={`object-position: ${imagePosition || 'center'}`}>
  <slot />
</section>
<style>
  section {
    display: flex;
    flex-direction: column;
    color: #ffffff;
    position: relative;
  }

  img {
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(40%);
  }
</style>