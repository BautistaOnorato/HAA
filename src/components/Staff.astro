---
import StaffLongCard from "./StaffLongCard.astro";
import { STAFF } from "../constants/staff";
---

<section>
  <h2>Conoce a nuestro equipo</h2>
  <div class="cards_container">
    {
      STAFF.map((staff, i) => (
        <StaffLongCard
          name={staff.name}
          role={staff.role}
          description={staff.description}
          image={staff.image}
          instagram={staff.instagram}
          twitter={staff.twitter}
          reverse={i % 2 !== 0}
        />
      ))
    }
  </div>
</section>
<style>
  section {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
    color: #ffffff;
  }

  h2 {
    font-size: 4rem;
    text-align: center;
  }

  .cards_container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }


  @media screen and (max-width: 1100px) {
    .cards_container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media screen and (max-width: 800px) {
    section {
      padding: 1.5rem;
    }

    .cards_container {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }
  }
</style>
