---
import GreenIcon from "../icons/GreenIcon.astro";
import TwitchIcon from "../icons/TwitchIcon.astro";
import YoutubeIcon from "../icons/YoutubeIcon.astro";
---

<section>
  <div class="title">
    <h3>Nos Encontras En Vivo Ac√°</h3>
    <p>Lunes a Viernes de 21 a 23 hs</p>
  </div>
  <div class="buttons">
    <a href="#" class="youtube">
      <YoutubeIcon size={40} color="#ff0000" />
      <span>YouTube</span>
    </a>
    <a href="#" class="twitch">
      <TwitchIcon size={40} color="#5a3e85" />
      <span>Twitch</span>
    </a>
    <a href="#" class="green">
      <GreenIcon size={48} color="#40c057" />
      <span>Green</span>
    </a>
  </div>
</section>
<style>
  section {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
  }

  .title {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    align-items: center;
    color: #ffffff;
  }

  h3 {
    font-size: 2.8rem;
  }

  .title p {
    opacity: 0.7;
    font-style: italic;
  }

  .buttons {
    display: flex;
    gap: 3rem;
  }

  a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: transparent;
    color: #ffffff;
    font-size: 1.5rem;
    cursor: pointer;
    border: 1px solid #666666;
    padding: 0.5rem 1rem;
    font-family: "Bebas Neue", sans-serif;
    text-decoration: none;
    position: relative;
    border: 0 solid;
    box-shadow: inset 0 0 20px rgba(255, 255, 255, 0);
    outline: 1px solid;
    outline-color: rgba(255, 255, 255, 0.5);
    outline-offset: 0px;
    text-shadow: none;
    transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
    width: 150px;
  }

  a:hover {
    /* border: 1px solid; */
    box-shadow:
      inset 0 0 20px rgba(255, 0, 0, 0.5),
      0 0 20px rgba(255, 0, 0, 0.2);
    outline-color: rgba(255, 255, 255, 0);
    outline-offset: 15px;
    text-shadow: 1px 1px 2px #427388;
  }

  a.twitch:hover {
    box-shadow:
      inset 0 0 20px #5a3e8580,
      0 0 20px #5a3e8520;
    outline-color: rgba(255, 255, 255, 0);
    outline-offset: 15px;
    text-shadow: 1px 1px 2px #427388;
  }
  
  a.green:hover {
    box-shadow:
      inset 0 0 20px #40c05780,
      0 0 20px #40c05720;
    outline-color: rgba(255, 255, 255, 0);
    outline-offset: 15px;
    text-shadow: 1px 1px 2px #427388;
  }
</style>
