---
import InstagramIcon from '../icons/InstagramIcon.astro';
import TwitterIcon from '../icons/TwitterIcon.astro';

interface Props {
  name: string;
  role: string;
  description: string;
  image: string;
  instagram?: string;
  twitter?: string;
  reverse?: boolean;
}

const { name, role, description, image, instagram, twitter, reverse } = Astro.props;
---
<div class={`card ${reverse ? 'reverse' : ''}`}>
  <div class="image">
    <img src={image} alt="">
  </div>
  <div class="content">
    <div class="info">
      <h4>{name}</h4>
      <h6>{role}</h6>
      <p>{description}</p>
    </div>
    <div class="social">
      {instagram && <a href={instagram} target="_blank"><InstagramIcon size={32} /></a>}
      {twitter && <a href={twitter} target="_blank"><TwitterIcon size={32} /></a>}
    </div>
  </div>
</div>
<style>
  .card {
    display: flex;
    gap: 1rem;
    border: 1px solid #ddd;
    min-height: 320px;
    /* overflow: hidden; */
  }

  .reverse {
    flex-direction: row-reverse;
  }

  .image {
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }

  .image img {
    /* min-height: calc(100% + 1rem); */
    height: calc(100% + 1rem);
    width: 100%;
    object-fit: cover;
    object-position: right;
  }

  .reverse .image img {
    object-position: left;
  }

  .content {
    display: flex;
    flex-direction: column;
    padding: 2rem 2rem 2rem 0;
    justify-content: space-between;
    width: 70%;
  }

  .reverse .content {
    padding: 2rem 0 2rem 2rem;
  }

  .content h4 {
    font-size: 2rem;
  }

  .content h6 {
    font-size: 1.4rem;
    opacity: 0.7;
    font-style: italic;
    font-weight: 300;
  }

  .content p {
    font-size: 1.2rem;
    font-family: "Roboto Flex Variable", sans-serif;
    /* font-weight: 200; */
    margin: 1rem 0;
    line-height: 1.7rem;
  }

  .social {
    display: flex;
    gap: 1rem;
  }

  .social a {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
  }

  .social a:hover {
    opacity: 0.7;
  }
</style>