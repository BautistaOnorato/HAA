---
import { PRODUCTION } from "../constants/staff";
import StaffShortCard from "./StaffShortCard.astro";
---

<section>
  <h3>La producci√≥n</h3>
  <div>
    {
      PRODUCTION.map((staff) => (
        <StaffShortCard
          name={staff.name}
          role={staff.role}
          image={staff.image}
        />
      ))
    }
  </div>
</section>
<style>
  section {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
    color: #ffffff;
  }

  h3 {
    font-size: 3rem;
  }

  div {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    width: 100%;
  }

  @media screen and (max-width: 800px) {
    section {
      padding: 1.5rem;
    }

    div {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
    /* div {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    } */
  }
</style>
