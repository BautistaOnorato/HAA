---
import type { Episode } from "../types/episode";

interface Props {
  title: string;
  href: string;
  data: Episode[];
}

const { title, href, data } = Astro.props;
---

<section>
  <div>
    <h4>{title}</h4>
    <a href={href}>Ver MÃ¡s</a>
  </div>
  <ul>
    {
      data.map((episode) => (
        <li>
          <a href={episode.youtube}>
            <img src={episode.image_url} alt="" />
          </a>
        </li>
      ))
    }
  </ul>
</section>
<style>
  section {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    padding: 3rem;
    flex-direction: column;
    gap: 1.5rem;
  }
  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    font-size: 1.5rem;
  }
  div a {
    text-decoration: none;
    color: #ffffff;
  }

  ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2rem;
    width: 100%;
  }

  li {
    width: 100%;
    aspect-ratio: 1/1;
  }

  img {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    object-fit: cover;
  }
</style>
