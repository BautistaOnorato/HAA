---
import type { Episode } from "../types/episode";

interface Props {
  title: string;
  href: string;
  data: Episode[];
}

const { title, href, data } = Astro.props;
---

<section>
  <div>
    <h4>{title}</h4>
    <a href={href}>Ver MÃ¡s</a>
  </div>
  <ul>
    {
      data.map((episode) => (
        <li>
          <a href={episode.youtube}>
            <img src={episode.image_url} alt="" />
          </a>
        </li>
      ))
    }
  </ul>
</section>
<style>
  section {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    padding: 3rem;
    flex-direction: column;
    gap: 1.5rem;
  }

  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    font-size: var(--short_title_size);
  }

  div a {
    text-decoration: none;
    color: #ffffff;
  }

  ul {
    list-style: none;
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    width: 100%;
  }

  li {
    width: 100%;
    aspect-ratio: 1/1;
  }

  img {
    width: 100%;
    height: 100%;
    border-radius: var(--border_radius);
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    section {
      padding: 2rem;
    }

    div {
      font-size: var(--paragraph_size);
    }

    ul li:nth-child(5) {
      display: none;
    }
  }

  @media screen and (max-width: 580px) {

    ul li:nth-child(4) {
      display: none;
    }

    ul {
      gap: 1rem;
    }
  }

  @media screen and (max-width: 420px) {
    ul li:nth-child(3) {
      display: none;
    }
  }
</style>
