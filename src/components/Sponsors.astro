---
import { SPONSORS } from "../constants/sponsors";
---

<section>
  <h3>Recomendaciones Personales</h3>
  <div>
    <ul>
      {
        SPONSORS.map((sponsor) => (
          <li>
            <a href={sponsor.href}>
              <img src={sponsor.image} alt="" />
            </a>
          </li>
        ))
      }
    </ul>
